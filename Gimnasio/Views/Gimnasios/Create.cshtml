@{
    ViewData["Title"] = "Crear Gimnasio";
}

<div class="container-fluid px-5">
    
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="fw-bolder text-dark mb-2">Nuevo Gimnasio</h1>
            <p class="text-muted mb-0">Registra un nuevo gimnasio en el sistema</p>
        </div>
        <a href="/Gimnasios" class="btn btn-light btn-sm">
            <i class="bi bi-arrow-left me-2"></i>
            Volver al listado
        </a>
    </div>

    <!-- Formulario -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0 pt-5 pb-3">
            <h3 class="card-title fw-bold text-dark">
                <i class="bi bi-building text-primary me-2"></i>
                Información del Gimnasio
            </h3>
        </div>
        <div class="card-body pt-0">
            <form id="createGimnasioForm" action="/Gimnasios/Create" method="post">
                <div class="row">
                    <!-- Columna Izquierda -->
                    <div class="col-lg-6">
                        <div class="mb-4">
                            <label class="form-label fw-semibold required">Nombre del Gimnasio</label>
                            <input type="text" class="form-control form-control-lg" name="NombreGimnasio" id="nombreGimnasio" placeholder="Ej: Fitness Plus" required />
                            <div class="form-text">El nombre comercial del gimnasio</div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold required">Nombre del Dueño</label>
                            <input type="text" class="form-control form-control-lg" name="duenoGimnasio" id="duenoGimnasio" placeholder="Ej: Juan Pérez" required />
                            <div class="form-text">Nombre completo del propietario</div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold required">Teléfono</label>
                            <input type="tel" class="form-control form-control-lg" name="telefono" id="telefono" placeholder="Ej: +1 234 567 8900" required />
                            <div class="form-text">Número de contacto principal</div>
                        </div>
                    </div>

                    <!-- Columna Derecha -->
                    <div class="col-lg-6">
                        <div class="mb-4">
                            <label class="form-label fw-semibold required">Email</label>
                            <input type="email" class="form-control form-control-lg" name="EmailGimnasio" id="emailGimnasio" placeholder="Ej: contacto@gimnasio.com" required />
                            <div class="form-text">Correo electrónico para acceso al sistema</div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold required">Contraseña</label>
                            <div class="input-group">
                                <input type="password" class="form-control form-control-lg" name="passwordGimnasio" id="passwordGimnasio" placeholder="Mínimo 6 caracteres" required />
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                    <i class="bi bi-eye" id="togglePasswordIcon"></i>
                                </button>
                            </div>
                            <div class="form-text">Contraseña para acceder al sistema</div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-check form-switch form-check-custom">
                                    <input class="form-check-input" type="checkbox" name="isActive" id="isActive" checked />
                                    <label class="form-check-label fw-semibold" for="isActive">
                                        Estado Activo
                                    </label>
                                </div>
                                <div class="form-text mt-2">El gimnasio podrá acceder al sistema</div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="form-check form-switch form-check-custom">
                                    <input class="form-check-input" type="checkbox" name="esPrueba" id="esPrueba" />
                                    <label class="form-check-label fw-semibold" for="esPrueba">
                                        Período de Prueba
                                    </label>
                                </div>
                                <div class="form-text mt-2">Marcar si está en período de prueba</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Botones de acción -->
                <div class="d-flex justify-content-end gap-3 mt-5 pt-5 border-top">
                    <a href="/Gimnasios" class="btn btn-light btn-lg">
                        <i class="bi bi-x-circle me-2"></i>
                        Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg" id="btnCrearGimnasio">
                        <i class="bi bi-check-circle me-2"></i>
                        Crear Gimnasio
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    <script>
    $(document).ready(function () {
        // Toggle password visibility
        $('#togglePassword').click(function () {
            const passwordInput = $('#passwordGimnasio');
            const icon = $('#togglePasswordIcon');
            
            if (passwordInput.attr('type') === 'password') {
                passwordInput.attr('type', 'text');
                icon.removeClass('bi-eye').addClass('bi-eye-slash');
            } else {
                passwordInput.attr('type', 'password');
                icon.removeClass('bi-eye-slash').addClass('bi-eye');
            }
        });

        // Form submission with AJAX
        $('#createGimnasioForm').on('submit', function(e) {
            e.preventDefault();
            
            const btn = $('#btnCrearGimnasio');
            btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Creando...');
            
            $.ajax({
                url: '/Gimnasios/Create',
                type: 'POST',
                data: $(this).serialize(),
                success: function(response) {
                    toastr.success('Gimnasio creado exitosamente');
                    setTimeout(function() {
                        window.location.href = '/Gimnasios';
                    }, 1000);
                },
                error: function(xhr) {
                    let message = 'Error al crear el gimnasio';
                    if (xhr.responseText) {
                        message = xhr.responseText;
                    }
                    toastr.error(message);
                    btn.prop('disabled', false).html('<i class="bi bi-check-circle me-2"></i>Crear Gimnasio');
                }
            });
        });
    });
    </script>

    <style>
        .required:after {
            content: " *";
            color: #dc3545;
        }

        .form-check-custom .form-check-input {
            width: 2.75rem;
            height: 1.5rem;
        }

        .card {
            border-radius: 0.75rem;
        }

        .form-control-lg {
            border-radius: 0.5rem;
        }

        .btn-lg {
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
        }
    </style>
}